// PasoVariablesReferencia2.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

float discriminante (float a, float b, float c);
void reales (float a, float b, float c, float &x1, float&x2);

void main()
{
	float a, b, c, valor1, valor2, d;
	cout<<"Ingrese valores de a, b, c";
	cin>>a>>b>>c;
	d=discriminante(a,b,c);
	if (d>0)
	{	reales(a,b,c,valor1,valor2);
	    cout<<"Raiz 1:"<<valor1<<endl;
		cout<<"Raiz 2:"<<valor2<<endl;
	}
	if (d<0)
	{  reales(a,b,c,valor1,valor2);
	    cout<<"Raiz imaginaria 1:"<<valor1<<endl;
		cout<<"Raiz imaginaria 2:"<<valor2<<endl;
	}
	if (d=0)
	{ reales(a,b,c,valor1,valor2);
	    cout<<"Raiz 1:"<<valor1<<endl;
	}
	getch();
}

float discriminante(float a, float b, float c)
{
	float d;
	d=(b*b)-(4*a*c);
	return d; // se debe devolver porque ha sido declarado con float
} 
void reales (float a, float b, float c, float &x1, float &x2)
{
	x1=(-b+sqrt(pow(b,2)-4*a*c))/(2*a);
	x2=(-b-sqrt(pow(b,2)-4*a*c))/(2*a);
}
